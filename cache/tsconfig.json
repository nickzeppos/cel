{
  "compilerOptions": {
    "target": "ES2017", // or whichever version of ECMAScript you prefer
    "module": "commonjs",
    "outDir": ".cache-scripts", // or whichever directory you prefer
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}

{
  "compilerOptions": {
    "target": "ES2017", // or whichever version of ECMAScript you prefer
    "module": "CommonJS",
    "outDir": "dist-scripts", // or whichever directory you prefer
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/scripts/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}

// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DB_URL")
}

model Congress {
    id        String @id @default(cuid())
    congress  Int
    startYear String
    endYear   String
}

model Chambress {
    id       String  @id @default(cuid())
    congress Int
    chamber  Chamber

    @@unique([congress, chamber])
}

enum Chamber {
    HOUSE
    SENATE
}

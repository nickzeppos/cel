generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Congress {
  id        String @id @default(cuid())
  congress  Int
  startYear String
  endYear   String
}

model Chambress {
  id       String  @id @default(cuid())
  congress Int
  chamber  Chamber

  @@unique([congress, chamber])
}

enum Chamber {
  HOUSE
  SENATE
}

model Member {
  bioguideId  String  @id
  name        String
  party       String
  state       String
  district    Int?
  url         String?
  imageUrl    String?
  attribution String?

  servedHouseStart  Int?
  servedHouseEnd    Int?
  servedSenateStart Int?
  servedSenateEnd   Int?
}

